@using LibraryManagementSystem.ViewModels.Author

@model AuthorCreateViewModel

<!-- Set the page title as "Add An Author" -->
@{
    ViewBag.Title = "Add An Author";
}

<!-- Page heading indicating the creation of a new author -->
<h1 class="text-center mb-4">New Author Registration</h1>

<!-- Start of the form to create a new author -->
<form method="post" class="p-4 border rounded shadow-sm bg-light">

    <!-- First Name Input Field -->
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">First Name</label>  <!-- Label for First Name -->
        <input asp-for="FirstName" class="form-control" placeholder="Enter the first name">  <!-- Input field for First Name -->
        <div class="form-text text-danger">
            <span asp-validation-for="FirstName"></span>  <!-- Display validation error for First Name -->
        </div>
    </div>

    <!-- Last Name Input Field -->
    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Last Name</label>  <!-- Label for Last Name -->
        <input asp-for="LastName" class="form-control" placeholder="Enter the last name">  <!-- Input field for Last Name -->
        <div class="form-text text-danger">
            <span asp-validation-for="LastName"></span>  <!-- Display validation error for Last Name -->
        </div>
    </div>

    <!-- Date of Birth Input Field -->
    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>  <!-- Label for Date of Birth -->
        <input asp-for="DateOfBirth" class="form-control" type="date">  <!-- Input field for Date of Birth -->
        <div class="form-text text-danger">
            <span asp-validation-for="DateOfBirth"></span>  <!-- Display validation error for Date of Birth -->
        </div>
    </div>

    <!-- Buttons (Aligned to right) -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <!-- Back Button -->
        <a asp-action="List" class="btn btn-primary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>

        <!-- Submit and Cancel Buttons -->
        <div>
            <button type="reset" class="btn btn-danger">
                <i class="bi bi-x-circle"></i> Cancel
            </button>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Submit
            </button>
        </div>
    </div>
</form>